{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@Test/*": [
        "./test/*"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "target": "ESNext"
  },
  "include": [
    "*.js",
    "*.ts",
    "private/**/*.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
